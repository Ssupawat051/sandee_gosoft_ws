<body>
  <div class="container" id="screen">
    <div class"container" id="face">
      <div id="eyes">
        <svg id="leftEye" height="200" width="100">
          <ellipse class="sclera" cx="50" cy="100" rx="50" ry="100" style="fill:white;stroke:black;stroke-width:5px" />
          <ellipse class="pupil" id="leftPupil" cx="50" cy="100" rx="25" ry="50" style="fill:grey;" />
        </svg>
        <svg id="rightEye" height="200" width="100">
         <ellipse class="sclera" cx="50" cy="100" rx="50" ry="100" style="fill:white;stroke:black;stroke-width:5px" />
          <ellipse  class="pupil" id = "rightPupil" cx="50" cy="100" rx="25" ry="50" style="fill:grey;" />
        </svg>
      </div>
      <div id="mouth">
        <svg  height="50" width="150">
           <path id = "mouthCurve" d="M10 10 C 50 30, 100 30, 140 10" stroke="white" stroke-width="5" fill="transparent"/>
        </svg>
      </div>
    </div>
    <div id="speechBubble">
      <svg version="1.1" viewBox="0 800 100 93.4" width="300">
        <path fill="#FFFFFF" d="M50.1,893.4C22.4,893.4,0,873.5,0,849c0-8.9,3-17.1,7.9-24l-2.6-22.8c-0.2-1.5,1.4-2.6,2.7-2l19.6,9
	c6.7-3,14.3-4.6,22.3-4.6c27.6,0,50.1,19.9,50.1,44.5C100.1,873.5,77.7,893.4,50.1,893">
      </svg>
       <span id = "speechText">How can I help you? </span>
    </div>
  </div>
  
</body>